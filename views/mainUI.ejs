<%- include("./include/_header") %>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/weather.css">
    <link rel="stylesheet" href="/css/media.css">

    <title>생활백서</title>
</head>
<body>
    <div class="content">
        <section class="weathercon">
            <div class="weather">
                <div id="weather-icon" class="weather-icon"></div>
                <div class="weather-info">
                    <div id="temperature">Loading...</div>
                    <div id="weather-description"></div>
                </div>
            </div>
        </section>
        <section class="bushatcon">
            <div class="hat">
                <h1>탈모 여부</h1>
                <% if (hat.status === 'green') { %>
                    <div class="circle green"></div>
                <% } else { %>
                    <div class="circle red"></div>
                <% } %>
            </div>
            <div class="bus">
                    <div style="font-size: 20px;">190번</div>
                    <div id="result"></div>
                <script>
                    window.onload = function() {
                        updateBusInfo();
                    };
                </script>
            </div>
        </section>

        <div id="myModal" class="modal">
            <span class="close" onclick="closeModal()">&times;</span>
            <img class="modal-content" id="modalImg">
        </div>
        <div class="image-container">
            <div class="image-box" onclick="openModal('<%= foodSrc %>', '식단표')">
                <div>식단표</div>
                <img src="<%= foodSrc %>" alt="식단표">
            </div>
            <div class="image-box" onclick="openModal('<%= daydutySrc %>', '학생당직표')">
                <div>학생당직표</div>
                <img src="<%= daydutySrc %>" alt="학생당직표">
            </div>    
            <div class="image-box" onclick="openModal('<%= nightdutySrc %>', '안전당직표')">
                <div>안전당직표</div>  
                <img src="<%= nightdutySrc %>" alt="안전당직표">
            </div>
        </div>

    <!-- 조직도(비상연락처, 기타에 포함) -->
        <section class="icon_list">
            <a href="/tip" class="icon_container">
                💤
                <span>규정</span>
            </a>
            <a href="/cloth" class="icon_container">
                💤
                <span>검수창고</span>
            </a>
            <a href="/company" class="icon_container">
                💤
                <span>선사정보</span>
            </a>
            <a href="/calc" class="icon_container">
                💤
                <span>실습점수계산기</span>
            </a>
            <a href="https://tis.kmou.ac.kr/nxui/index.html" class="icon_container">
                💤
                <span>종합정보시스템</span>
            </a>
            <a href="/medicine" class="icon_container">
                💤
                <span>의약품재고</span>
            </a>
            <a href="#" class="icon_container">
                💤
                <span>#</span>
            </a>
            <a href="#" class="icon_container">
                💤
                <span>이벤트</span>
            </a>
        </section>

        <section class="notice">
            <div class="notice_head">
                <h2>공지사항</h2>
                <a href="/board" style="text-decoration: none; font-size: 20px;">+</a>
            </div>
            <div class="notice_list">
                <ul>
                    <% boards.forEach (board => { %>
                        <li><a href="/board/<%= board.createdAt.toISOString() %>"><%= board.title %></a></li>
                    <% }); %>
                </ul>
            </div>
        </section>
    </div>
<!--부서 별 활동 이행 내역-->
    <script src="/js/bus.js"></script>
    <script src="/js/img.js"></script>
    <script src="/js/weather.js"></script>
<%- include("./include/_footer") %>